---
import BaseHead from "$lib/components/BaseHead.astro";
import Header from "$lib/components/Header.astro";

const { frontmatter } = Astro.props;
---

<html lang="en" class="dark scroll-smooth bg-[#171717]">
  <head>
    <BaseHead title={frontmatter.title} description={frontmatter.description} />
    <style>
      article *:not(img) {
        max-width: 42rem;
      }

      article img {
        max-width: 56rem;
      }
    </style>
  </head>

  <body>
    <Header />
    <main class="relative overflow-hidden py-8">
      <article class="prose prose-lg prose-neutral !prose-invert relative mx-auto mt-6 max-w-4xl px-4 py-4 prose-headings:scroll-m-20 prose-a:text-white prose-img:pointer-events-none prose-img:w-full prose-img:rounded-lg prose-video:w-full prose-video:rounded-lg sm:px-4 lg:px-6">
        <div class="mx-auto mb-5 mt-0 max-w-2xl">
          <div class="mx-auto">
            <div class="relative z-50 text-xs font-bold text-neutral-300">
              <span class="relative z-50 block uppercase">{frontmatter.type}</span>
            </div>
          </div>
        </div>
        <div class="mx-auto mb-0 mt-0 max-w-2xl">
          <div class="mx-auto">
            <h1 class="relative z-50 text-5xl font-bold text-white">{frontmatter.title}</h1>
          </div>
        </div>
        {
          frontmatter.description && (
            <div class="mx-auto mb-0 mt-5 max-w-2xl ">
              <div class="mx-auto">
                <p class="relative z-50 text-2xl font-medium leading-7 text-white" set:html={frontmatter.description} />
              </div>
            </div>
          )
        }
        {frontmatter.heroImage && <img src={frontmatter.heroImage} alt="heroImage" class="mx-auto" />}
        <div class="prose-lg mx-auto leading-[1.688rem]">
          <slot />
        </div>
      </article>
    </main>
  </body>
</html>
